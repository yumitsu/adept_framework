/* TOOLBOX */

	.a-toolbox {
		position: relative;
		width: 250px;
	}
	/* B:toolbox-head */
	.a-toolbox-head {
		position: relative;
		border: 1px solid #b9cfd8;
		background-image: url(../../img/toolbox_top.gif);
		background-repeat: repeat-y;
		background-position: 100% 0;
		background-color: #fff;
		cursor: pointer;
		width: 100%;
	}
	.a-toolbox-title {
		padding: 5px 5px 5px 25px;
	}
	.a-toolbox-head-focusindicator-container {
		top: 0;
		left: 0;
		position: absolute;
		width: 100%;
		height:100%;
		overflow: hidden;
		padding: 3px 3px 3px 22px;
	}
	.a-toolbox-head-focusindicator {
		width: 100%;
		height: 100%;
		border-style: none;
		border-width: 1px;
		border-color: #aaaaaa;
	}
	.a-toolbox-head-focus .a-toolbox-head-focusindicator {
		border-style: dotted;
	}
	/* B:toolbox-body */
	.a-toolbox-body {
		overflow: hidden;
		width: 100%;
		border-width: 0 1px 1px 1px;
		border-color: #b9cfd8;
		border-style: solid;
		background-color: #ffffff;
		padding: 0;
	}
	.a-toolbox-body-content {
		padding: 8px;
	}
	
	/* B:toolbox-OPENCLOSEBUTTON */
	.a-toolbox-openclosebutton {
		position: absolute;
		left: 5px;
		top: 7px;
		height: 11px;
		width: 11px;
		overflow: hidden; /* to make sure the button is not stretched in IE */
		background-image: url(../../img/arrow.gif);
	}
	.a-toolbox-open.a-toolbox-head .a-toolbox-openclosebutton{
		background-position: 0 0;
	}
	
	.a-toolbox-open.a-toolbox-head-hov .a-toolbox-openclosebutton{
		background-position: 0 -11px;
	}
	
	.a-toolbox-open.a-toolbox-head-pres .a-toolbox-openclosebutton{
		background-position: 0 -22px;
	}
	
	.a-toolbox-closed.a-toolbox-head .a-toolbox-openclosebutton{
		background-position: 0 -33px;
	}
	
	.a-toolbox-closed.a-toolbox-head-hov .a-toolbox-openclosebutton{
		background-position: 0 -44px;
	}
	
	.a-toolbox-closed.a-toolbox-head-pres .a-toolbox-openclosebutton {
		background-position: 0 -55px;
	}
